<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reminder_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="title" />

    <TextView
        android:id="@+id/reminder_details_time"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_below="@id/reminder_details_title"
        android:textSize="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reminder_details_medication"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/reminder_details_time"
        android:layout_height="wrap_content"/>
</RelativeLayout>